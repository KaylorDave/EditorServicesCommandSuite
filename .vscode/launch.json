{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
        {
            "name": ".NET FullCLR Attach",
            "type": "clr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true,
        },
        {
            "name": ".NET FullCLR Launch (console)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "Build",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "justMyCode": true,
            "console": "externalTerminal",
            "program": "powershell.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-NoExit",
                "-Command",
                ". \"${workspaceRoot}/debugHarness.ps1\"",
            ],
        },
        {
            "name": ".NET CoreCLR Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true,
        },
        {
            "name": ".NET CoreCLR Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "justMyCode": true,
            "console": "externalTerminal",
            "linux": {
                "program": "/usr/bin/pwsh",
                "args": [
                    "-NoExit",
                    "-Command",
                    ". \"${workspaceRoot}/debugHarness.ps1\"",
                ],
            },
            "osx": {
                "program": "/usr/local/bin/pwsh",
                "args": [
                    "-NoExit",
                    "-Command",
                    ". \"${workspaceRoot}/debugHarness.ps1\"",
                ],
            },
            "program": "pwsh.exe",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-NoExit",
                "-Command",
                ". \"${workspaceRoot}/debugHarness.ps1\"",
            ],
        },
    ],
}
